@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Salve " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        @if (User.IsInRole("Administrators"))
                    {
                        <li>
                            @Html.ActionLink("Dashboard ", "Admin", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                        </li>
        } else if (User.IsInRole("Users"))
                    {
                        <li>
                            @Html.ActionLink("Dashboard ", "Studente", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                        </li>

                    }
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Disconnetti</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Esegui registrazione", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Accedi", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
